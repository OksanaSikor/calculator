<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Test suite">
    <test name="Smoke Tests">
        <groups>
            <run>
                <include name="smoke"></include>
            </run>
        </groups>
        <classes>
            <class name="test.AdditionTest"/>
            <class name="test.SubtractionTest"/>
            <class name="test.MultiplicationTest"/>
            <class name="test.DivisionTest"/>
        </classes>
    </test>
</suite>